<!doctype html>
<html class="no-js" lang="en-US" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {% block head %}
    {% endblock %}

    <link rel="stylesheet" href="{{ static('css/sandstone/sandstone.css') }}" media="all">
    <link rel="stylesheet" href="{{ static('css/main.css') }}" media="all">
    <link rel="shortcut icon" href="{{ static('img/favicon.ico') }}">
    <link rel="stylesheet" type="text/css" href="{{ static('css/tabzilla.css') }}" media="screen">

    <!--[if lte IE 8]>
    <script src="{{ static('js/libs/html5shiv.js') }}"></script>
    <![endif]-->

  </head>

  <body class="sky">
    <div id="outer-wrapper">
      <div id="wrapper">

        <header id="masthead">
          <div id="tabzilla">
            <a href="https://mozilla.org">Mozilla</a>
          </div>
            {% if user.is_authenticated() %}
              <nav id="nav-main" role="navigation">
                <a href="{{ url('archive') }}">Event archive</a>
              </nav>
            {% else %}
              <a class="login button" href="{{ url('oidc_authentication_init') }}">
                Login
              </a>
            {% endif %}

          <h2>
            <a href="/">
              <img class="main-logo" src="{{ static('img/mozillamoderator-new.png') }}" alt="mozillamoderator">
            </a>
          </h2>

          {% if messages %}
            <div class="row">
              {% for message in messages %}
                <div class="alert-box {{ message.tags }}">
                  {{ message }}
                  <a href="#" class="close">&times;</a>
                </div>
              {% endfor %}
            </div>
          {% endif %}

          {% block breadcrumb %}
          {% endblock %}
        </header>

        <div id="main-content">
          {% block content %}
          {% endblock %}
        </div>
      </div>

      <footer id="colophon">
        <div class="row">

          <div class="footer-logo">
            <a href="https://www.mozilla.org">
              <img src="{{ static('img/sandstone/footer-mozilla.png') }}" alt="mozilla">
            </a>
          </div>

          <div class="footer-license">
              <p>
                Content available under a
                <a href="https://www.mozilla.org/foundation/licensing/website-content.html">Creative Commons license</a>.
              </p>
              <p>
                <a href="https://github.com/mozilla/mozmoderator">Contribute to this app</a>
              </p>
          </div>
          <ul class="footer-nav">
            <li><a href="https://www.mozilla.org/privacy">Privacy Policy</a></li>
            <li><a href="https://www.mozilla.org/about/legal.html">Legal Notices</a></li>
          </ul>

        </div>
      </footer>

    </div>

    <script src="{{ static('js/libs/jquery-1.11.2.min.js') }}"></script>
    <script src="{{ static('js/site.js') }}"></script>
    <script src="{{ static('js/nav-main-resp.js') }}"></script>
    <script src="{{ static('js/app.js') }}"></script>
    {% block js %}{% endblock %}
  </body>
</html>
